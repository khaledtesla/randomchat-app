{
  "name": "randomchat-webrtc",
  "version": "1.0.0",
  "description": "Production-ready WebRTC random chat application with video/text chat capabilities",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "docker:build": "docker build -t randomchat-webrtc .",
    "docker:run": "docker run -p 3000:3000 randomchat-webrtc",
    "build": "npm install --production",
    "health-check": "node scripts/health-check.js"
  },
  "keywords": [
    "webrtc",
    "chat",
    "video-chat",
    "socket.io",
    "random-chat",
    "production",
    "security"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.2",
    "ioredis": "^5.3.2",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "eslint": "^8.47.0",
    "eslint-config-standard": "^17.1.0",
    "@types/jest": "^29.5.4",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/randomchat-webrtc.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/randomchat-webrtc/issues"
  },
  "homepage": "https://github.com/yourusername/randomchat-webrtc#readme"
}