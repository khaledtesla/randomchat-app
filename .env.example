# Environment Configuration for RandomChat WebRTC App
# Copy this file to .env and configure for your Oracle server deployment

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Replace with your Oracle server's public IP
PUBLIC_IP=your.oracle.server.public.ip
INTERNAL_IP=0.0.0.0

# SSL Configuration (recommended for production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/your/ssl/certificate.crt
SSL_KEY_PATH=/path/to/your/ssl/private.key

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-long-replace-this
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters-long-replace-this

# CORS - Add your domain(s) here
ALLOWED_ORIGINS=http://your-domain.com,https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Chat Configuration
MAX_MESSAGE_LENGTH=500
MAX_CHAT_DURATION=3600000
CONTENT_FILTER_ENABLED=true
PROFANITY_FILTER_STRICT=true

# WebRTC Configuration - STUN servers (free)
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302,stun:stun2.l.google.com:19302

# TURN servers (for NAT traversal) - You'll need to set up your own or use a service
# Example format: [{"urls":"turn:your-turn-server:3478","username":"user","credential":"pass"}]
TURN_SERVERS=[]

# Analytics & Monetization (optional)
GOOGLE_ANALYTICS_ID=
GOOGLE_ADSENSE_CLIENT_ID=

# Database Configuration (optional - for persistent logging)
REDIS_URL=
MONGODB_URL=

# Logging Configuration  
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_TO_FILE=true

# Monitoring
HEALTH_CHECK_INTERVAL=30000
CLEANUP_INTERVAL=300000

# Trusted domains for ads and analytics
TRUSTED_AD_DOMAINS=https://www.googletagmanager.com,https://pagead2.googlesyndication.com,https://www.google-analytics.com